@using OpenShock.Sentry.Ui.Pages.Dash
@using OpenShock.Sentry.Ui.Utils
@using OpenShock.Sentry.Ui.ErrorHandling

<MudThemeProvider Theme="ThemeDefinition.SentryTheme"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<ContainerWithExceptionHandling>
        <Router AppAssembly="@typeof(Main).Assembly">
            <Found Context="routeData">
                <RouteView DefaultLayout="typeof(DashLayout)" RouteData="@routeData"/>
                <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
            </Found>
            <NotFound>
                <LayoutView Layout="@typeof(DashLayout)">
                    <p role="alert">Sorry, there's nothing at this address. How did you get here?</p>
                </LayoutView>
            </NotFound>
        </Router>
</ContainerWithExceptionHandling>

